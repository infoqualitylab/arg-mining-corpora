{
  "$comment": "Schema for a list of argument mining corpora, unique by corpus_id and name",
  "type": "object",
  "properties": {
    "corpora": {
      "$comment": "List of corpora",
      "type": "array",
      "uniqueItems": true,
      "uniqueItemProperties": ["corpus_id", "corpus_name"],
      "items": {
        "type": "object",
        "properties": {
          "corpus_id": {
            "$comment": "Unique id, should be human readable",
            "type": "string"
          },
          "corpus_name": {
            "$comment": "Name of corpus",
            "type": "string"
          },
          "genre": {
            "$comment": "genre of corpus, e.g., 'legal', 'social media', 'scientific', 'general'",
            "type": "string"
          },
          "description": {
            "$comment": "Short description of corpus",
            "type": "array",
            "items": {
              "$comment": "Paragraph of description. If you start a string with NOTE it will be highlighted in the display.",
              "type": "string"
            }
          },
          "language": {
            "$comment": "Language(s) of corpus, e.g., 'English', 'Chinese'",
            "type": "array",
            "items": {
              "$comment": "Language of corpus",
              "type": "string"
            }
          },
          "document_type": {
            "$comment": "Type of documents in corpus, e.g., 'essays', 'tweets', 'legal cases'",
            "type": "string"
          },
          "document_count": {
            "$comment": "Size of corpus in number of documents",
            "type": "integer"
          },
          "parent_corpora_id": {
            "$comment": "List of parent corpora ids if this corpus is derived from other corpora",
            "type": "array",
            "items": {
              "$comment": "Unique id of parent corpus",
              "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true
          }
        },
        "required": [
          "corpus_id",
          "corpus_name",
          "genre",
          "description",
          "language",
          "document_type",
          "document_count",
          "parent_corpora_id"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["corpora"],
  "additionalProperties": false
}
