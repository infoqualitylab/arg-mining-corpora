{
  "$comment": "Schema for a list of argument mining papers, unique by paper_id and doi",
  "type": "object",
  "properties": {
    "papers": {
      "$comment": "List of papers",
      "type": "array",
      "uniqueItems": true,
      "uniqueItemProperties": [
        "paper_id",
        "doi"
      ],
      "items": {
        "type": "object",
        "properties": {
          "paper_id": {
            "$comment": "Unique id, should be human readable",
            "type": "string"
          },
          "open_alex_id": {
            "$comment": "Unique open alex id if available",
            "type": "string"
          },
          "paper_title": {
            "$comment": "Title of paper",
            "type": "string"
          },
          "authors": {
            "$comment": "List of authors in order",
            "type": "array",
            "items": {
              "$comment": "Full name of author",
              "type": "string"
            },
            "minItems": 1
          },
          "description": {
            "$comment": "Short description of paper",
            "type": "string",
            "maxLength": 650
          },
          "year": {
            "$comment": "Year of publication",
            "type": "integer"
          },
          "doi": {
            "$comment": "DOI of paper",
            "type": "string",
            "format": "uri"
          },
          "paper_link": {
            "$comment": "URL where paper can be accessed",
            "type": "string",
            "format": "uri"
          },
          "annotations": {
            "$comment": "Schema for a list of annotation tasks carried out on an argument mining corpora, unique",
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "corpus_id": {
                  "$comment": "Unique id for the corpus being annotated, should be human readable",
                  "type": "string"
                },
                "annotation_task": {
                  "$comment": "Array of annotation tasks performed on the corpora",
                  "type": "array",
                  "items": {
                    "$comment": "Type of annotation task performed, Argument Component Segmentation (ACS), Argument Component Type Classification (ACTC), Claim Evidence Extraction (CE), Claim Evidence Pair Extraction (CEPE), Aspect-Based Argument Mining (ABAM), Context-Dependent Claim Detection (CDCD), Context-Dependent Evidence Detection (CDED), Claim Extraction with Stance Classification (CESC), Argumentative Relation Identification (ARI), Argumentative Relation Type Classification (ARTC), ? (ACRE), and Other for anything else",
                    "type": "string",
                    "enum": [
                      "Argument Component Segmentation",
                      "Argument Component Type Classification",
                      "Claim Evidence Extraction",
                      "Claim Evidence Pair Extraction",
                      "Aspect-Based Argument Mining",
                      "Context-Dependent Claim Detection",
                      "Context-Dependent Evidence Detection",
                      "Claim Extraction with Stance Classification",
                      "Argumentative Relation Identification",
                      "Argumentative Relation Type Classification",
                      "ACRE (?)",
                      "Other"
                    ]
                  }
                },
                "description": {
                  "$comment": "Short description of the annotation task",
                  "type": "string",
                  "maxLength": 650
                },
                "annotator_count": {
                  "$comment": "Number of annotators involved in the annotation task. If number of annotators was not specified, still fill in this field with a ?.",
                  "oneOf": [
                    {
                      "type": "number",
                      "minimum": 0
                    },
                    {
                      "type": "string",
                      "enum": [
                        "?"
                      ]
                    }
                  ]
                },
                "annotator_type": {
                  "$comment": "Type of annotators involved in the annotation task, Author (the authors of the paper), Expert (domain experts), Student (students, e.g. undergraduates), Crowd (crowdsourced workers, e.g. from MTurk or Prolific), Other (anything else)",
                  "type": "array",
                  "items": {
                    "enum": [
                      "Author",
                      "Expert",
                      "Student",
                      "Crowd",
                      "Other"
                    ]
                  },
                  "minItems": 1,
                  "uniqueItems": true
                },
                "agreement_type": {
                  "$comment": "Type of inter-annotator agreement measure used, Cohen's Kappa, Fleiss' Kappa, Krippendorff's Alpha, Percent Agreement, Other (anything else)",
                  "type": "string",
                  "enum": [
                    "Cohen's Kappa",
                    "Fleiss' Kappa",
                    "Krippendorff's Alpha",
                    "Percent Agreement",
                    "Other"
                  ]
                },
                "agreement_score": {
                  "$comment": "Inter-annotator agreement score, percentages should be represented as a decimal. If a non-exact value is reported, specify in the deviant_agreement_type field how to interpret this value, you can then either report a range, or a ? for missing values, or a single value for averages.",
                  "oneOf": [
                    {
                      "type": "number",
                      "minimum": -1,
                      "maximum": 1
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "number",
                        "minimum": -1,
                        "maximum": 1
                      },
                      "minItems": 2,
                      "maxItems": 2
                    },
                    {
                      "type": "string",
                      "enum": [
                        "?"
                      ]
                    }
                  ]
                },
                "accessibility": {
                  "$comment": "Accessibility of the annotated data, Free (freely available online), Upon Request (available from authors upon request), Paid (available for a fee), Unavailable (not available)",
                  "type": "string",
                  "enum": [
                    "Free",
                    "Upon Request",
                    "Paid",
                    "Unavailable"
                  ]
                },
                "corpus_link": {
                  "$comment": "URL where the annotated data can be accessed, if available. If not available, link to the paper describing the annotation task",
                  "type": "string",
                  "format": "uri"
                }
              },
              "required": [
                "corpus_id",
                "annotation_task",
                "description",
                "annotator_type",
                "annotator_count",
                "agreement_type",
                "agreement_score",
                "accessibility",
                "corpus_link"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "paper_id",
          "paper_title",
          "authors",
          "description",
          "year",
          "paper_link",
          "annotations"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "papers"
  ],
  "additionalProperties": false
}
